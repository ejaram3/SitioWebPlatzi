@section Scripts {
    <script>
        // Animación para las tarjetas flotantes
        document.addEventListener('DOMContentLoaded', function() {
            const cards = document.querySelectorAll('.floating-card');
            cards.forEach((card, index) => {
                card.style.animationDelay = `${index * 0.2}s`;
            });
        });
    </script>
}

<style>
    :root {
        --platzi-green: #98CA3F;
        --platzi-dark: #121F3D;
        --platzi-darker: #0A1526;
    }

    body {
        background-color: var(--platzi-dark);
        color: white;
    }

    /* Hero Section */
    .hero-section {
        background: linear-gradient(135deg, var(--platzi-darker) 0%, var(--platzi-dark) 100%);
        padding: 80px 0;
        position: relative;
        overflow: hidden;
    }

    .hero-title {
        font-size: 3.5rem;
        font-weight: 800;
        line-height: 1.2;
        margin-bottom: 1.5rem;
    }

    .hero-subtitle {
        font-size: 1.25rem;
        color: #B8C5D6;
        margin-bottom: 2rem;
    }

    .text-platzi {
        color: var(--platzi-green);
    }

    .btn-platzi {
        background-color: var(--platzi-green);
        border: none;
        color: var(--platzi-dark);
        font-weight: 700;
        padding: 12px 32px;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .btn-platzi:hover {
        background-color: #87B935;
        transform: translateY(-2px);
        box-shadow: 0 10px 25px rgba(152, 202, 63, 0.3);
    }

    .btn-outline-light {
        border: 2px solid white;
        color: white;
        font-weight: 600;
        padding: 10px 32px;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .btn-outline-light:hover {
        background-color: white;
        color: var(--platzi-dark);
        transform: translateY(-2px);
    }

    .hero-stats {
        display: flex;
        gap: 3rem;
    }

    .stat-item {
        text-align: left;
    }

    .stat-number {
        font-size: 2.5rem;
        font-weight: 800;
        color: var(--platzi-green);
        margin: 0;
    }

    .stat-label {
        color: #B8C5D6;
        margin: 0;
    }

    /* Floating Cards */
    .hero-illustration {
        position: relative;
        height: 500px;
    }

    .floating-card {
        position: absolute;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 16px;
        padding: 20px;
        animation: float 3s ease-in-out infinite;
    }

    .floating-card.card-2 {
        top: 150px;
        right: 100px;
        animation-delay: 1s;
    }

    .floating-card.card-3 {
        top: 300px;
        left: 50px;
        animation-delay: 2s;
    }

    .card-icon {
        font-size: 2.5rem;
        margin-bottom: 10px;
    }

    .floating-card h4 {
        font-size: 1.1rem;
        margin-bottom: 5px;
    }

    .floating-card p {
        font-size: 0.9rem;
        color: #B8C5D6;
        margin: 0;
    }

    @@keyframes float {
        0%, 100% { transform: translateY(0px); }
        50% { transform: translateY(-20px); }
    }

    /* Schools Section */
    .schools-section {
        padding: 80px 0;
        background-color: var(--platzi-dark);
    }

    .section-title {
        font-size: 2.5rem;
        font-weight: 800;
    }

    .school-card {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        padding: 30px;
        text-align: center;
        transition: all 0.3s ease;
        cursor: pointer;
    }

    .school-card:hover {
        background: rgba(152, 202, 63, 0.1);
        border-color: var(--platzi-green);
        transform: translateY(-5px);
    }

    .school-icon {
        font-size: 3rem;
        margin-bottom: 15px;
    }

    .school-card h3 {
        font-size: 1.2rem;
        font-weight: 700;
        margin-bottom: 10px;
    }

    .school-routes {
        color: var(--platzi-green);
        font-weight: 600;
        margin: 0;
    }

    /* Features Section */
    .features-section {
        padding: 80px 0;
        background: linear-gradient(180deg, var(--platzi-dark) 0%, var(--platzi-darker) 100%);
    }

    .feature-item {
        text-align: center;
        padding: 20px;
    }

    .feature-icon {
        font-size: 3rem;
        margin-bottom: 20px;
    }

    .feature-item h3 {
        font-size: 1.3rem;
        font-weight: 700;
        margin-bottom: 15px;
    }

    .feature-item p {
        color: #B8C5D6;
        font-size: 1rem;
    }

    /* CTA Section */
    .cta-section {
        padding: 100px 0;
        background: linear-gradient(135deg, var(--platzi-green) 0%, #87B935 100%);
        color: var(--platzi-dark);
    }

    .cta-title {
        font-size: 3rem;
        font-weight: 800;
        margin-bottom: 20px;
    }

    .cta-section .text-platzi {
        color: var(--platzi-darker);
    }

    .cta-subtitle {
        font-size: 1.25rem;
        margin-bottom: 30px;
        color: var(--platzi-darker);
    }

    .cta-note {
        color: var(--platzi-darker);
        font-weight: 600;
    }

    .cta-section .btn-platzi {
        background-color: var(--platzi-dark);
        color: white;
    }

    .cta-section .btn-platzi:hover {
        background-color: var(--platzi-darker);
    }

    .cta-section .btn-outline-light {
        border-color: var(--platzi-dark);
        color: var(--platzi-dark);
    }

    .cta-section .btn-outline-light:hover {
        background-color: var(--platzi-dark);
        color: white;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .hero-title {
            font-size: 2.5rem;
        }

        .hero-stats {
            gap: 1.5rem;
        }

        .section-title {
            font-size: 2rem;
        }

        .cta-title {
            font-size: 2rem;
        }
    }
</style>
